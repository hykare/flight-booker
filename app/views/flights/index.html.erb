<h1 class="title is-1">flight booker</h1>
<%= form_with url: flights_path, method: :get do |form| %>

  <div class="field">
    <%= form.label :departure_airport_id, 'departure airport', class: "label" %>
    <div class="control">
      <div class="select">
        <%= select_tag :departure_airport_id, options_for_select(@airport_options) %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.label :arrival_airport_id, 'arrival airport', class: "label" %>
    <div class="control">
      <div class="select">
        <%= select_tag :arrival_airport_id, options_for_select(@airport_options), class: "select" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.label :no_of_passengers, 'number of passengers', class: "label" %>
    <div class="control">
      <div class="select">
        <%= form.select :no_of_passengers, (1..4) %>
      </div>
    </div>
  </div>
  <%= form.submit 'search flights', class: "button is-success" %>
<% end %>
